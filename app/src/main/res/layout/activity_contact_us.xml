<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactUs_design_navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ContactUs"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/contactUs_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_red"
            app:title="Uthiram"
            app:titleTextColor="@color/red">

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/contactUs_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/contactUs_relLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/contactUs_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="Contact Us"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/contactUs_phoneNoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactUs_title"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="Phone No : "
                    android:textColor="@color/black"
                    android:textSize="23sp" />


                <TextView
                    android:id="@+id/contactUs_phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactUs_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@+id/contactUs_phoneNoText"
                    android:text="9952810338"
                    android:textColor="@color/red"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/contactUs_gmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactUs_phoneNoText"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="Gmail : "
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/contactUs_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactUs_phoneNo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="57dp"
                    android:layout_toRightOf="@+id/contactUs_gmailText"
                    android:text="vbc@kct.ac.in"
                    android:textColor="@color/red"
                    android:textSize="23sp" />
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/contactUs_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/home_menu_list">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>

