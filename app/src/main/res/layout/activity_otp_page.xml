<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otpPage_relLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpPage">

    <ImageView
        android:id="@+id/otpPage_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-99dp"
        android:src="@drawable/wave" />

    <TextView
        android:id="@+id/otpPage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpPage_wave"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        android:fontFamily="@font/tillana_semibold"
        android:text="OTP Verification"
        android:textColor="@color/green"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/otpPage_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otpPage_otpText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter OTP"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/otpPage_registerBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otpPage_otpText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/golden_yellow"
                android:elevation="10dp"
                android:text="Register"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/otpPage_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otpPage_registerBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/sky_blue"
                android:elevation="10dp"
                android:text="Cancel"
                android:textColor="@color/black" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>