<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/design_navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EditEmergencyRequest"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            app:title="Uthiram"
            app:titleTextColor="@color/white">

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/editRequestBloodDonor_relLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/editRequestBloodDonor_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/doppio_one"
                            android:text="Request A Blood Donor"
                            android:textColor="@color/red"
                            android:textSize="30sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editRequestBloodDonor_patientName"
                            style="@style/text_style"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_title"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:hint="Patient Name"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/editRequestBloodDonor_bloodGroup"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_patientName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:hint="Blood Group"
                            android:paddingStart="10dp"
                            android:textSize="19sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editRequestBloodDonor_unitsNeeded"
                            style="@style/text_style"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_bloodGroup"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:hint="Units Needed"
                                android:inputType="number" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editRequestBloodDonor_hospitalName"
                            style="@style/text_style"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_unitsNeeded"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:hint="Hospital Name"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editRequestBloodDonor_patientPhoneNo"
                            style="@style/text_style"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_hospitalName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:hint="11234567890"
                                android:inputType="phone" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/editRequestBloodDonor_neededWithIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_patientPhoneNo"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="30dp"
                            android:text="Needed Within"
                            android:textColor="@color/green"
                            android:textSize="19sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editRequestBloodDonor_date"
                            style="@style/text_style"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_neededWithIn"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="290dp"
                                android:layout_height="wrap_content"
                                android:hint="DD/MM/YYYY"
                                android:inputType="date" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editRequestBloodDonor_time"
                            style="@style/text_style"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_neededWithIn"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/editRequestBloodDonor_date">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="HH:MM"
                                android:inputType="time" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/editRequestBloodDonor_selectDateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_date"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/trans_white"
                            android:text="Select Date"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/editRequestBloodDonor_selectTimeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_date"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/editRequestBloodDonor_selectDateBtn"
                            android:backgroundTint="@color/trans_white"
                            android:text="Select Time"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/editRequestBloodDonor_updateDonorBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_selectDateBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/golden_yellow"
                            android:text="Update Details"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/editRequestBloodDonor_cancelBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editRequestBloodDonor_updateDonorBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="40dp"
                            android:backgroundTint="@color/sky_blue"
                            android:text="Cancel"
                            android:textColor="@color/black" />

                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>


        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_list">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>









