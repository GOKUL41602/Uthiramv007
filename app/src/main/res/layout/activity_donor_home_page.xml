<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/design_navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DonorHomePage"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            app:title="Uthiram"
            app:titleTextColor="@color/red">

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/donorHomePage_relLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/donorHomePage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/tillana_semibold"
                    android:text="Welcome Donor!"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/donorHomePage_logOutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/donorHomePage_title"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/silver"
                    android:text="Log Out"
                    android:textColor="@color/black" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/donorHomePage_title"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="40dp">

                        <Button
                            android:id="@+id/donorHomePage_viewProfileBtn"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/golden_yellow"
                            android:elevation="10dp"
                            android:text="View Profile"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/donorHomePage_updateProfileBtn"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/donorHomePage_viewProfileBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/golden_yellow"
                            android:elevation="10dp"
                            android:text="Update Profile"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/donorHomePage_updateStatusBtn"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/donorHomePage_updateProfileBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/golden_yellow"
                            android:elevation="10dp"
                            android:text="Update Status"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/donorHomePage_backBtn"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/donorHomePage_updateStatusBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="40dp"
                            android:backgroundTint="@color/sky_blue"
                            android:elevation="10dp"
                            android:text="Back"
                            android:textColor="@color/black" />

                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_list">

    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>